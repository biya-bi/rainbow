<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="RainbowJournalPersistenceUnit"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class>org.rainbow.journal.core.entities.File</class>
		<class>org.rainbow.journal.core.entities.Journal</class>
		<class>org.rainbow.journal.core.entities.Profile</class>
		<class>org.rainbow.journal.core.entities.Publication</class>
		<class>org.rainbow.journal.core.entities.Subscription</class>

		<exclude-unlisted-classes>false</exclude-unlisted-classes>

		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource" />
			<property name="eclipselink.logging.level" value="ALL" />
			<property name="javax.persistence.schema-generation.database.action"
				value="none" />
			<property name="eclipselink.logging.parameters" value="true" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="Passw0rd" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/rainbow_journal" />
		</properties>
	</persistence-unit>

</persistence>